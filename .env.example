# ===========================================
# Presentation Understanding Engine
# Environment Configuration
# ===========================================

# Application Settings
APP_NAME="Presentation Understanding Engine"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development  # development, staging, production

# ===========================================
# API Settings
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# ===========================================
# Ollama LLM Settings
# ===========================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
NARRATION_TEMPERATURE=0.4
QA_TEMPERATURE=0.3
LLM_TIMEOUT=120
LLM_MAX_RETRIES=3

# ===========================================
# Text-to-Speech (Edge-TTS) Settings
# ===========================================
TTS_VOICE_EN=en-US-AriaNeural
TTS_VOICE_FR=fr-FR-DeniseNeural
TTS_VOICE_HI=hi-IN-SwaraNeural
TTS_RATE=+0%

# ===========================================
# Video Settings
# ===========================================
VIDEO_WIDTH=1280
VIDEO_HEIGHT=720
VIDEO_FPS=30
VIDEO_CRF=23
VIDEO_PRESET=fast

# ===========================================
# Storage Settings
# ===========================================
BASE_DATA_DIR=data
UPLOAD_DIR=data/uploads
AUDIO_DIR=data/audio
IMAGE_DIR=data/images
VIDEO_DIR=data/videos
FINAL_VIDEO_DIR=data/final_videos

# ===========================================
# Processing Limits
# ===========================================
MAX_SLIDES=10
MAX_FILE_SIZE_MB=50
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT_MINUTES=30

# ===========================================
# File Cleanup
# ===========================================
CLEANUP_ENABLED=true
CLEANUP_MAX_AGE_HOURS=24

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_MINUTES=1

# ===========================================
# Redis Settings (Optional)
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false
CACHE_TTL_SECONDS=86400

# ===========================================
# Supported Languages
# ===========================================
SUPPORTED_LANGUAGES=["en","fr","hi"]
DEFAULT_LANGUAGE=en
